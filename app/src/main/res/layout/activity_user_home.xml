<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@color/colorMain"
        android:layout_marginTop="50dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/UserPicture"
            android:background="@drawable/pic2"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nekogee"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="5dp"
                android:id="@+id/userName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="我的个性签名"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:id="@+id/userDescription"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#EAEAEA" >


        <LinearLayout
            android:id="@+id/tab_1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_store_face" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:text="个人主页" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_store_store" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="我的音源库" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_store_lightbulb" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:text="我的作品" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_store_info" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:text="个人信息" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_5"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="305dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_store_settings" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:text="设置" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="440dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>


